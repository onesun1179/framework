{

  "compilerOptions": {
    "typeRoots": [
      "./src/types/global.d.ts"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@common/*" : ["./src/common/*"],
      "@auth/*" : ["./src/auth/*"],
      "@util/*" : ["./src/common/util/*"],
      "@modules/code/*" : ["./src/module/code/*"],
      "@modules/auth/*" : ["./src/module/auth/*"],
      "@modules/app-metadata/*" : ["./src/module/app-metadata/*"],
      "@modules/front-component/*" : ["./src/module/front-component/*"],
      "@modules/icon/*" : ["./src/module/icon/*"],
      "@modules/menu/*" : ["./src/module/menu/*"],
      "@modules/message/*" : ["./src/module/message/*"],
      "@modules/role/*" : ["./src/module/role/*"],
      "@modules/route/*" : ["./src/module/route/*"],
      "@modules/user/*" : ["./src/module/user/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
